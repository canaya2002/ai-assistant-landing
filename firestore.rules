rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usuarios: solo pueden leer/escribir sus propios datos
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Videos generados: solo pueden acceder los propietarios
    match /generated_videos/{videoId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Imágenes generadas: solo pueden acceder los propietarios
    match /generated_images/{imageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Conversaciones: solo pueden acceder los propietarios
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Uso de videos: solo pueden acceder los propietarios
    match /video_usage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Uso de imágenes: solo pueden acceder los propietarios
    match /image_usage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Uso general: solo pueden acceder los propietarios
    match /usage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}