{
  "name": "nora-ai-website",
  "version": "1.0.0",
  "private": true,
  "description": "NORA AI - Asistente de IA con generación de imágenes",
  "keywords": [
    "ai",
    "chat",
    "image-generation",
    "nextjs",
    "firebase",
    "gemini"
  ],
  "author": "NORA AI Team",
  "license": "MIT",
  "homepage": "https://nora-ai.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/nora-ai.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/nora-ai/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "./scripts/setup.sh",
    "setup:dev": "./scripts/dev-setup.sh",
    "emulators": "firebase emulators:start",
    "emulators:import": "firebase emulators:start --import=./emulator-data",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "deploy": "npm run deploy:functions && npm run deploy:hosting",
    "deploy:functions": "./scripts/deploy-functions.sh",
    "deploy:hosting": "./scripts/deploy-hosting.sh",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "functions:logs": "firebase functions:log",
    "functions:config": "firebase functions:config:get",
    "functions:shell": "cd functions && npm run shell",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:images": "./scripts/test-image-generation.sh",
    "monitor": "./scripts/monitor-usage.sh",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "firebase firestore:export ./backups/$(date +%Y%m%d_%H%M%S)",
    "db:restore": "firebase firestore:import",
    "security:audit": "npm audit && firebase firestore:rules:validate",
    "security:scan": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules functions/node_modules",
    "reinstall": "npm run clean:all && npm install && cd functions && npm install",
    "precommit": "npm run lint && npm run type-check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "firebase": "^12.2.1",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "lucide-react": "^0.542.0",
    "next": "^15.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.6.0",
    "stripe": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
